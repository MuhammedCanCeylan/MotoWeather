<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_rounded"
    android:backgroundTint="@color/cardBgTertiary"
    android:layout_marginBottom="8dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Ara"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/txtGun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cum"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2°"
            android:textColor="#64B5F6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/txtMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17°"
            android:textColor="#E57373"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/txtEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☀️"
            android:textSize="24sp"
            android:textColor="@color/textColorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGizliDetay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/txtRuzgarDetay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Rüzgar: ..."
                android:textColor="@color/textColorSecondary"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/txtNemDetay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Yağış: ..."
                android:textColor="@color/textColorSecondary"
                android:gravity="end"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:text="@string/label_risk_haritasi"
            android:textColor="#80FFFFFF"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <com.canceylan.motoweather.RiskTimelineView
            android:id="@+id/riskTimelineBar"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:text="00:00" android:textColor="#666" android:textSize="9sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
            <TextView android:text="06:00" android:textColor="#666" android:textSize="9sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center"/>
            <TextView android:text="12:00" android:textColor="#666" android:textSize="9sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center"/>
            <TextView android:text="18:00" android:textColor="#666" android:textSize="9sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center"/>
            <TextView android:text="24:00" android:textColor="#666" android:textSize="9sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="end"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>