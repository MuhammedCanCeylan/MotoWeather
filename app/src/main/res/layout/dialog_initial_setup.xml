<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_welcome"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_select_moto"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#AAAAAA"
        android:paddingBottom="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cardScooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_unselected"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_marginEnd="10dp">
                <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/motor_scooter"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/moto_scooter" android:textColor="#FFF" android:textSize="11sp" android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardNaked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_unselected"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_marginEnd="10dp">
                <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/motor_street"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/moto_street" android:textColor="#FFF" android:textSize="11sp" android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardSport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_unselected"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_marginEnd="10dp">
                <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/motor_racing"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/moto_racing" android:textColor="#FFF" android:textSize="11sp" android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardTouring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_unselected"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_marginEnd="10dp">
                <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/motor_enduro"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/moto_touring" android:textColor="#FFF" android:textSize="11sp" android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardAdv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_unselected"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp">
                <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/motor_adc"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/moto_adv" android:textColor="#FFF" android:textSize="11sp" android:layout_marginTop="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_select_level"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#AAAAAA"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <LinearLayout android:id="@+id/cardBaslangicSetting" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:clickable="true" android:focusable="true" android:padding="8dp" android:layout_marginEnd="8dp" android:background="@drawable/bg_card_unselected">
            <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/xp_baslangic" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lvl_baslangic" android:textSize="11sp" android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/cardOrtaSetting" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:clickable="true" android:focusable="true" android:padding="8dp" android:layout_marginEnd="8dp" android:background="@drawable/bg_card_unselected">
            <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/xp_orta" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lvl_orta" android:textSize="11sp" android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/cardIleriSetting" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:clickable="true" android:focusable="true" android:padding="8dp" android:background="@drawable/bg_card_unselected">
            <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/xp_ileri" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lvl_ileri" android:textSize="11sp" android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKurulumuTamamla"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/setup_complete"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        app:backgroundTint="#FF6200"
        app:cornerRadius="12dp"/>

</LinearLayout>