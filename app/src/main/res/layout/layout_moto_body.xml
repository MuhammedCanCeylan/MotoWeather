<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/weatherBg"
    android:paddingHorizontal="20dp"
    android:paddingTop="15dp"

    android:paddingBottom="100dp"

    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_saatlik_tahmin"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"/>

    <HorizontalScrollView
        android:id="@+id/scrollSaatlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_marginBottom="25dp">
        <LinearLayout
            android:id="@+id/layoutSaatlik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/cardDurum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:backgroundTint="@color/cardBgTertiary"
        android:elevation="6dp"
        android:padding="20dp"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:id="@+id/layoutTavsiye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/risk_dikkat_baslik"
                android:textSize="12sp"
                android:textColor="@color/textColorTertiary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtOneri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/durum_yukleniyor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginVertical="15dp"
                android:alpha="0.5"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/motor_racing"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/textColorSecondary"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/txtEkipman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/durum_ekipman_info"
                    android:textSize="14sp"
                    android:textColor="@color/textColorSecondary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/label_5_gunluk"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_help"
            app:tint="@color/iconTint"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGunlukTahminler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <com.canceylan.motoweather.AstroPathView
            android:id="@+id/astroView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="-30dp">

            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:id="@+id/txtGunDogumu" android:text="@string/lbl_saat_yok" android:textColor="@color/textColorPrimary" android:textStyle="bold" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_gun_dogumu" android:textColor="@color/textColorSecondary" android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="end">
                <TextView android:id="@+id/txtGunBatimi" android:text="@string/lbl_saat_yok" android:textColor="@color/textColorPrimary" android:textStyle="bold" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_gun_batimi" android:textColor="@color/textColorSecondary" android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>